<% layout('layouts/boilerplate') %>

<h1>All Campgrounds</h1>
<div><a href="/campgrounds/new">New Campground</a></div>
<ul>
    <% for (let camp of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (camp.images.length) { %>
                <img class="img-fluid" alt="" src='<%= camp.images[0].url %>'>
                <% } else { %>
                <img class="img-fluid" alt=""
                    src='https://dsgmedia.blob.core.windows.net/pub/2017/04/how-to-set-up-a-campsite.jpg'>
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= camp.location %></small>
                    </p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</ul>